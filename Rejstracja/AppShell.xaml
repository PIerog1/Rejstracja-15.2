<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Rejstracja.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Rejstracja"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <Tab Title="Rejestracja">
            <ShellContent
            Title="Rejestracja"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        </Tab>
        <Tab Title="Sklep">
            <ShellContent
                Title="Sklep"
                ContentTemplate="{DataTemplate local:Sklep}"
                Route="Sklep"/>
        </Tab>
    </TabBar>
</Shell>
